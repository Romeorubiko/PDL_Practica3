				expr_list:e1 EQEQ expr_list:e2{: RESULT = (e1 == e2);        :}
				| expr_list:e1 LTEQ expr_list:e2{: RESULT = ((Float.valueOf(String.valueOf(e1))) <= (Float.valueOf(String.valueOf(e2))));   :}
